# envs/dev/terraform.tfvars.example
# 실제 사용 시 terraform.tfvars로 복사 후 값 수정
# terraform.tfvars는 .gitignore에 추가하여 Git에 커밋하지 않음

#==============================================================================
# 공통 설정
#==============================================================================
project_name = "billage"
env          = "dev"
aws_region   = "ap-northeast-2"

#==============================================================================
# VPC 설정
#==============================================================================
vpc_cidr           = "10.0.0.0/16"
public_subnet_cidr = "10.0.1.0/24"
availability_zone  = "ap-northeast-2a"

#==============================================================================
# Security Group 설정
# 보안을 위해 SSH는 개발자 IP만 허용 권장
#==============================================================================
ssh_allowed_cidr = ["0.0.0.0/0"]        # 개발 단계: 전체 허용
# ssh_allowed_cidr = ["123.123.123.123/32"]  # 운영 단계: 특정 IP만 허용

db_allowed_cidr = ["0.0.0.0/0"]         # 개발 단계: 전체 허용
# db_allowed_cidr = ["10.0.0.0/16"]      # 운영 단계: VPC 내부만 허용

#==============================================================================
# EC2 설정
#==============================================================================
instance_type    = "t4g.medium"  # ARM 기반, 월 약 3.4만원
root_volume_size = 30            # GB

# 키페어 설정 - 옵션 1: 새로 생성
# create_key_pair = true
# public_key      = "ssh-rsa AAAA... your-email@example.com"

# 키페어 설정 - 옵션 2: 기존 키 사용 (AWS 콘솔에서 미리 생성)
create_key_pair   = false
existing_key_name = "billage-keypair"  # AWS에서 생성한 키페어 이름

# Elastic IP (고정 IP)
create_eip = true

#==============================================================================
# Route 53 설정
#==============================================================================
domain_name = "billages.com"
