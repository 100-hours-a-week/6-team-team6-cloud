# envs/s3-images/terraform.tfvars
# S3 이미지 저장소 설정값

#==============================================================================
# 공통 설정
#==============================================================================
project_name = "billage"
env          = "dev"
aws_region   = "ap-northeast-2"

#==============================================================================
# S3 설정
#==============================================================================
# CORS 허용 오리진 (프론트엔드 URL)
cors_allowed_origins = [
  "http://localhost:3000",
  "https://dev.billages.com"
]

# 버전 관리 (true: 이미지 실수 삭제 방지, false: 비용 절약)
enable_versioning = false